<!-- breadcrumb-section start -->
<section class="breadcrumb-section">
    <div class="container-fluid">
        <div class="row g-0">
            <div class="col-xl-6 col-lg-6">
                <div class="breadcrumb-content" style="background-image: url(<%= (typeof bgImage !== 'undefined' && bgImage) ? bgImage : '/images/NGO/WhatsApp Image 2026-02-06 at 6.31.33 PM.jpeg' %>);">
                    <div class="breadcrumb-nav" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                        <ul>
                            <% if (typeof crumbs !== 'undefined' && crumbs) { %>
                                <% crumbs.forEach(function(crumb) { %>
                                    <li><a href="<%= crumb.href %>"><%= crumb.text %></a></li>
                                <% }); %>
                            <% } else { %>
                                <li><a href='/'>Home</a></li>
                                <li><a href="#"><%= title %></a></li>
                            <% } %>
                        </ul>
                    </div>
                    <div class="breadcrumb-title" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
                        <h2><%= title %></h2>
                    </div>
                    <div class="shape-1">
                        <img src="/assets/img/shapes/shape-1.webp" alt="shape">
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 d-none d-lg-block">
                <div class="breadcrumb-thumb">
                    <img src="<%= (typeof thumb !== 'undefined' && thumb) ? thumb : '/images/NGO/WhatsApp Image 2026-02-06 at 6.31.28 PM.jpeg' %>" alt="thumb">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb-section end -->
