<div class="row justify-content-center text-center <%= (typeof extraClasses !== 'undefined' && extraClasses) ? extraClasses : 'm-t-30' %>">
    <div class="col-xl-6">
        <div class="project-pagination">
            <ul>
                <% if (typeof locals.pagination !== 'undefined' && locals.pagination.totalPages > 1) {
                    const currentPage = locals.pagination.page;
                    const totalPages = locals.pagination.totalPages;
                %>
                    <!-- Previous -->
                    <% if (currentPage > 1) { %>
                        <li class="icon">
                            <a href="?page=<%= currentPage - 1 %>"><i class="fa-regular fa-arrow-left"></i></a>
                        </li>
                    <% } %>

                    <!-- Pages -->
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="<%= currentPage === i ? 'active' : '' %>">
                            <a href="?page=<%= i %>"><%= i < 10 ? '0' + i : i %></a>
                        </li>
                    <% } %>

                    <!-- Next -->
                    <% if (currentPage < totalPages) { %>
                        <li class="icon">
                            <a href="?page=<%= currentPage + 1 %>"><i class="fa-regular fa-arrow-right"></i></a>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
    </div>
</div>
