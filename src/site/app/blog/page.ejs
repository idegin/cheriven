<%
const blogs = locals.data || [];
%>

<%- include('../../components/shared/breadcrumb', { title: 'Latest News', crumbs: [{text: 'Home', href: '/econest/'}, {text: 'Blog', href: '#'}] }) %>

<!-- blog-section start -->
<section class="blog-section p-t-120 p-b-120">
    <div class="container">
        <div class="row" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(function(blog) { %>
                    <div class="col-xl-4 col-md-6 col-sm-12 m-b-30">
                        <div class="blog-card-2">
                            <div class="thumb">
                                <a href="/econest/blog/<%= blog.slug %>">
                                    <img src="<%= blog.image %>" alt="<%= blog.title %>"/>
                                </a>
                                <div class="event-date">
                                    <h2><%= blog.day %></h2>
                                    <h5><%= blog.month %></h5>
                                </div>
                            </div>
                            <div class="content">
                                <div class="content-top p-0 m-b-20">
                                    <ul class="d-flex" style="list-style: none; padding: 0; gap: 15px;">
                                        <li class="author">
                                            <div class="admin" style="display: flex; align-items: center; gap: 5px; color: var(--paragraph-color);">
                                                <i class="fa-light fa-circle-user" style="color: var(--primary-color);"></i>
                                                <span><%= blog.author %></span>
                                            </div>
                                        </li>
                                        <li class="author">
                                            <div class="solar" style="display: flex; align-items: center; gap: 5px; color: var(--paragraph-color);">
                                                <i class="fa-light fa-bookmark" style="color: var(--primary-color);"></i>
                                                <span><%= blog.category %></span>
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="title m-t-10">
                                        <h3>
                                            <a href="/blog/<%= blog.slug %>">
                                                <%= blog.title %>
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                                <div class="content-bottom">
                                    <a class='e-primary-btn has-icon has-small read-more-btn' href='/econest/blog/<%= blog.slug %>'>
                                        Read More
                                        <span class="icon-wrap"><span class="icon"><i class="fa-regular fa-arrow-right"></i><i class="fa-regular fa-arrow-right"></i></span></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                 <%- include('../../components/shared/empty-state', { message: 'No news articles found at the moment.', showButton: false }) %>
            <% } %>
        </div>
        <%- include('../../components/shared/pagination') %>
    </div>
</section>
<!-- blog-section end -->
